@model iTemplate.Web.ViewModels.ForgotPasswordViewModel
@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary("", new { @class = "text-danger" })

  <div class="row center-form" style="margin-top:5%;">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <div class="panel panel-default">

        <div class="panel-heading">
          <div class="panel-title">Forgotten Password</div>
        </div>

        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              @PageEditor.TextBoxFor(Html, model => model.Email, "envelope")
            </div>
          </div>
        </div>

        <div class="panel-footer">
          @PageButton.Submit("Email Link")
          @PageButton.NavigateUrl("Cancel", "Login")
        </div>

      </div>
    </div>
  </div>
}

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
