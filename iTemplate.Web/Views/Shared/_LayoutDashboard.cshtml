@using iTemplate.Web.Data.Site;
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - @Configuration.SiteName</title>
  <link id="siteTheme" href="@Url.Content(Configuration.ThemeUrl)" rel="stylesheet" type="text/css" />

  @Scripts.Render("~/bundles/modernizr")
  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @*<script src="~/Scripts/datepicker/js/bootstrap-datepicker.js"></script>
  <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
  <script src="~/SignalR/hubs"></script>
  <script src="~/Scripts/custom/hub.js"></script>*@
  <script src="~/Scripts/custom/styling.js"></script>

  <!-- Custom CSS -->
  <link href="~/Content/dashboard/css/sb-admin.css" rel="stylesheet" />
  <!-- Morris Charts CSS -->
  <link href="~/Content/dashboard/css/plugins/morris.css" rel="stylesheet" />
  <!-- Custom Fonts -->
  <link href="~/Content/dashboard/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>

  <div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      @Html.Partial("_NavBar")
      <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav side-nav">
          @{ Html.RenderAction("MenuDashboard", "Navigation", new { area = "" }); }

          <li>
            <a href="javascript:;" data-toggle="collapse" data-target="#optionMenu">
              <i class="fa fa-fw fa-file-image-o"></i> Options<i class="fa fa-fw fa-caret-down"></i>
            </a>
            <ul id="optionMenu" class="collapse">

              <li class="">
                <a href="#">Option 1</a>
              </li>

              <li class="">
                <a href="#">Option 2</a>
              </li>
            </ul>
          </li>

          <li>
            <a href="#" data-toggle="collapse" data-target="#financeMenu">
              <i class="fa fa-fw fa-table"></i> Finance<i class="fa fa-fw fa-caret-down"></i>
            </a>
            <ul id="financeMenu" class="collapse">

              <li class="">
                <a href="#">Receivable</a>
              </li>

              <li class="">
                <a href="#">Payable</a>
              </li>
            </ul>
          </li>

          <li>
            <a href="charts.html"><i class="fa fa-fw fa-bar-chart-o"></i> Web Metrics</a>
          </li>

          <li>
            <a href="/Filter/Index"><i class="fa fa-fw fa-edit"></i> Search Filters</a>
          </li>

          <li>
            <a href="/Profile/Edit"><i class="fa fa-fw fa-desktop"></i> Edit Profile</a>
          </li>

          <li>
            <a href="bootstrap-grid.html"><i class="fa fa-fw fa-wrench"></i> Bootstrap Grid</a>
          </li>

          <li>
            <a href="blank-page.html"><i class="fa fa-fw fa-file"></i> Blank Page</a>
          </li>

          <li>
            <a href="index-rtl.html"><i class="fa fa-fw fa-dashboard"></i> RTL Dashboard</a>
          </li>





        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </nav>

    <div id="page-wrapper">
      @RenderBody()
    </div>
  </div>

  @RenderSection("scripts", required: false)
</body>
</html>
