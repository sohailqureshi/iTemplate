@model iTemplate.Web.ViewModels.RoleViewModel
@using (Html.BeginForm())
{
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      @Html.AntiForgeryToken()
      @Html.ValidationSummary(true)
      @Html.HiddenFor(model => model.Id)

      @PageEditor.TextBoxFor(Html, model => model.Name)
      @PageEditor.TextBoxFor(Html, model => model.Description)
      @PageEditor.CheckBoxFor(Html, model => model.IsSystem)

      <div class="panel-footer">
        @PageButton.Submit()
        @PageButton.Cancel()
      </div>

    </div>
  </div>
}

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
