@model IdentityManager.Web.Models.Theme
@{
  Layout = "~/Views/Shared/_Layout.cshtml";
  @PageTitle.Heading("Theme", "Edit");
}
  @using (Html.BeginForm())
  {
    <div class="container">
      @Html.AntiForgeryToken()
      @Html.ValidationSummary(true)

      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="panel-title">Themes</div>
          </div>

          <div style="padding-top:30px" class="panel-body">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Url)
            @PageEditor.TextboxFor(Html, model => model.Name, "")
          </div>

          <div class="panel-footer" style="padding-left:10px">
            <input type="submit" value="Update" class="btn btn-success" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
          </div>
        </div>
      </div>
    </div>
  }

