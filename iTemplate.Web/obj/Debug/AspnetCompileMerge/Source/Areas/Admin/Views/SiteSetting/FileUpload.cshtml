@{
  Layout = "~/Views/Shared/_Layout.cshtml";
  ViewBag.Title = "File Upload";
}

<hgroup>
  <page-title>@ViewBag.Title</page-title>
  <page-subtitle>@ViewBag.Message</page-subtitle>
</hgroup>

@using (Html.BeginForm("FileUpload", "Site", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
  <div class="row">
    <div class="col-md-6">

      <div class="panel panel-default">
        <div class="panel-heading">
          <label class='text-info'>Select File</label>
        </div>
        <div class="panel-body">
          <input type="file" name="file" class="form-control" />
        </div>
        <div class="panel-footer">
          <input type="submit" name="Submit" id="Submit" value="Upload" class="btn btn-primary" />
        </div>
      </div>
    </div>
  </div>
}
